{
  "manifest_version": 3,
  "name": "chatgptree",
  "description": "A browser extension that enhances the ChatGPT web interface with an interactive conversation tree, in-browser code execution, bookmarks, and other powerful tools.",
  "version": "0.1.0",
  "icons": {
    "16": "logo16.png",
    "32": "logo32.png",
    "48": "logo192.png",
    "128": "logo512.png"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "permissions": [
    "sidePanel",
    "storage",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://emkc.org/*"
      ],
      "js": [
        "lib/gpt-tokenizer.js",
        "lib/fuse.min.js",
        "modules/autocomplete.js",
        "modules/utils.js",
        "modules/ui.js",
        "modules/tree.js",
        "modules/navigation.js",
        "modules/runner.js",
        "modules/shortcuts.js",
        "modules/tokenizer.js",
        "contentScript.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "Open chatgptree sidebar"
  },
   "web_accessible_resources": [
    {
      "resources": [ "runner.html", "runner_iframe.js", "wordlist.json" ],
      "matches": [ "https://chat.openai.com/*", "https://chatgpt.com/*" ]
    }
  ],
  "sandbox": {
    "pages": [
      "runner.html"
    ]
  },
  "content_security_policy": {
    "sandbox": "sandbox allow-scripts; script-src 'self' 'unsafe-inline' 'unsafe-eval'"
  }
}